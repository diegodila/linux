> sudo tar xvzf jdk-14.0.2_linux-x64_bin.tar.gz -C /opt
> ls /opt 
> echo -e 'export JAVA_HOME="/opt/jdk-14.0.2"\nexport PATH="$PATH:${JAVA_HOME}/bin"\n' | sudo tee /etc/profile.d/jdk14.sh
> echo $JAVA_HOME && echo $PATH
> java -version

